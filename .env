# Exoplanet AI Environment Configuration
# Copy this file to .env and fill in your actual values

# JWT Secret Key (generate a secure random string)
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-change-this-in-production

# Email Configuration (for email verification and notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@exoplanet-ai.com

# OAuth Configuration (optional - for Google/GitHub login)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
OAUTH_REDIRECT_URI=http://localhost:8501

# Admin Configuration
ADMIN_EMAIL=admin@exoplanet-ai.com

# Database Configuration (SQLite is used by default)
DATABASE_URL=sqlite:///exoplanet_users.db

# API Configuration
API_BASE_URL=https://api.exoplanet-ai.com
API_VERSION=v1.0

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
MAX_UPLOAD_SIZE=200MB
